# Variables d'environnement pour Mireb Commercial B2B
# Copiez ce fichier vers .env.local et remplissez les valeurs

# Configuration générale
NEXT_PUBLIC_APP_NAME="Mireb Commercial B2B"
NEXT_PUBLIC_APP_VERSION="2.1.0"
NEXT_PUBLIC_APP_URL="https://mireb-commercial.vercel.app"

# Configuration API
NEXT_PUBLIC_API_URL="https://api.mirebcommercial.com"
API_SECRET_KEY="your-secret-key-here"

# Configuration base de données
DATABASE_URL="your-database-url-here"
DATABASE_SECRET="your-database-secret"

# Configuration authentification
NEXTAUTH_URL="https://mireb-commercial.vercel.app"
NEXTAUTH_SECRET="your-nextauth-secret"
JWT_SECRET="your-jwt-secret"

# Configuration OAuth/Social Login
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Configuration Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="mirebshop@gmail.com"
SMTP_PASS="your-smtp-password"

# Configuration Stockage Cloud
CLOUDINARY_CLOUD_NAME="your-cloudinary-name"
CLOUDINARY_API_KEY="your-cloudinary-key"
CLOUDINARY_API_SECRET="your-cloudinary-secret"

# Configuration Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
FACEBOOK_PIXEL_ID="your-facebook-pixel-id"

# Configuration Paiement
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
PAYPAL_CLIENT_ID="your-paypal-client-id"

# Configuration Mode
NODE_ENV="development"
NEXT_PUBLIC_ENV="development"

# Configuration Logs
LOG_LEVEL="info"
ENABLE_LOGGING="true"

# Configuration Cache
REDIS_URL="redis://localhost:6379"
CACHE_TTL="3600"

# Configuration Sécurité
CORS_ORIGIN="https://mireb-commercial.vercel.app"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"
