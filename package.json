{
  "name": "mireb-commercial-b2b",
  "version": "2.1.0",
  "description": "Plateforme B2B moderne pour connecter acheteurs et fournisseurs",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "clean": "rm -rf .next out node_modules/.cache",
    "format": "prettier --write . --ignore-path .gitignore",
    "format:check": "prettier --check . --ignore-path .gitignore",
    "analyze": "ANALYZE=true npm run build",
    "docker:build": "docker build -t b50-platform .",
    "docker:run": "docker run -p 3000:3000 b50-platform",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=out",
    "postbuild": "next-sitemap",
    "prepare": "husky install || true",
    "export": "next build && next export"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "next": "15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^8",
    "eslint-config-next": "15.1.6",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "lint-staged": "^16.1.2",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "keywords": [
    "b2b",
    "ecommerce",
    "marketplace",
    "nextjs",
    "typescript",
    "tailwindcss",
    "mobile-first",
    "commercial",
    "suppliers",
    "buyers"
  ],
  "author": {
    "name": "Mireb",
    "email": "mirebshop@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mireb1/Mireb-commercial-B2B.git"
  },
  "bugs": {
    "url": "https://github.com/mireb1/Mireb-commercial-B2B/issues"
  },
  "homepage": "https://github.com/mireb1/Mireb-commercial-B2B#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
